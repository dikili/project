@model ProjectScreen.Models.Project

@{
    ViewBag.Title = "Create";
}

<h2>New Entry Details</h2>

@*@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()*@
<form id="newProject" method="post">
   @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>Project</legend>
        <table>

            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Date)
                    </div>
                </td>
                <td>
                    @Html.TextBox("Date", DateTime.Now.ToShortDateString(), new { @class = "datefield" })
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.LabelFor(model => model.Name)
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Name)
                        @Html.ValidationMessageFor(model => model.Name)
                    </div>
                </td>
            </tr>
            <tr>
                <td>
                    <div class="editor-label">
                        @Html.Label("PM/AM")
                    </div>
                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Pmam)
                        @Html.ValidationMessageFor(model => model.Pmam)
                    </div>
                </td>
            </tr>
            <tr>
                <td>

                    @Html.LabelFor(model => model.Description)

                </td>
                <td>
                    <div class="editor-field">
                        @Html.EditorFor(model => model.Description)
                        @Html.ValidationMessageFor(model => model.Description)
                    </div>
                </td>
            </tr>
            <span id="msg" style="color:red;" />
        </table>
        <p>
            <input type="button" value="Create" id="New" />| @Html.ActionLink("Back to List", "Index", "Home")
        </p>
    </fieldset>
</form>
}

@*@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")*@

@section Scripts {
    @*@Scripts.Render("~/bundles/jqueryval")*@
    <script type="text/javascript">
        $(document).ready(function () {
            $(".datefield").datepicker({ dateFormat: 'dd/mm/yy', changeYear: true });
        });
    </script>

    <script type="text/javascript">
    $('#New').click(function () {
        var form = $("#newProject");
        var url = "/Update/Create"
        var formData = form.serialize();
        $.post(url, formData, function (data) {
          window.location="/Home/Index"        
        });
     
    })
    </script>


   
}
