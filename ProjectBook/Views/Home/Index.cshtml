          </th>
          <th>
             NAME
          </th>
          <th>
              PM/AM
          </th>
          <th>
              DESC
          </th>
       
          <th></th>
      </tr>
    @foreach (var item in Model)
    {
       
    @*<tr class="@(@item.Date > DateTime.Now ? "red" : "black")">*@
    <tr style="background-color: @(@item.Date > DateTime.Now.AddDays(7) ? "white" : "#CC3333")">
        <td>
            @item.Date.ToShortDateString()
        </td>
        <td class="name-label">
            @item.Name
        </td>
        <td class="pmam-label">
            @item.Pmam
        </td>
        <td class="description-label">
            @item.Description
        </td>

        <td>
            @*@Html.ActionLink("Edit", "Edit", new { controller = "Update", Id = item.Id })*@
            <a href="#" class="edit-project" data-id="@item.Id">Edit</a>
            <div id="del">
                @Html.ActionLink("Delete", "Delete", new { controller = "Update", Id = item.Id }, new { style = "color:red" })
            </div>
